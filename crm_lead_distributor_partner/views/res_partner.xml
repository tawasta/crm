<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_partner_form" model="ir.ui.view">
        <field name="name">res.partner.form.inherit</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="crm.view_partners_form_crm1" />
        <field name="arch" type="xml">

            <!-- Add new action button pointing to CRM pipeline -->
            <button name="action_view_opportunity" position="after">
                <button
          class="oe_stat_button"
          name="action_view_distributor_partner_opportunities"
          type="object"
          icon="fa-handshake-o"
          groups="sales_team.group_sale_salesman"
          attrs="{'invisible': [('is_distributor_partner', '=', False)]}"
        >
                <field
            string="Distributor Leads"
            name="distributor_partner_opportunity_count"
            widget="statinfo"
          />
                </button>
            </button>

            <field name="category_id" position="after">
                <field name="is_distributor_partner" />
            </field>

            <xpath expr="//group[@name='sale']" position="inside">
                <field
          name="distributor_partner_id"
          attrs="{'invisible': [('is_distributor_partner', '=', True)]}"
          context="{'default_is_distributor_partner': True }"
        />
            </xpath>
        </field>
    </record>
</odoo>
