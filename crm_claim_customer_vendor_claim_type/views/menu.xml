<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_crm_case_claims_filter" model="ir.ui.view">
        <field name="name">crm.claim.filter.claim.type</field>
        <field name="model">crm.claim</field>
        <field name="inherit_id" ref="crm_claim.view_crm_case_claims_filter" />
        <field name="arch" type="xml">
            <field name="user_id" position="after">
                <field name="claim_type" />
            </field>
        </field>
    </record>

    <record model="ir.actions.act_window" id="crm_claim_category_claim_vendor">
        <field name="name">Vendor claims</field>
        <field name="res_model">crm.claim</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="crm_claim.crm_case_claims_tree_view" />
        <field name="context">
        {"stage_type": 'claim',  "search_default_claim_type": 'vendor'}</field>
        <field name="search_view_id" ref="crm_claim.view_crm_case_claims_filter" />
    </record>

    <record model="ir.actions.act_window" id="crm_claim.crm_claim_category_claim0">
        <field name="context">
        {"search_default_user_id":uid, "stage_type": 'claim', "search_default_claim_type": 'customer'}</field>
    </record>

    <menuitem
    name="Claims"
    id="menu_crm_vendor_claims"
    parent="purchase.menu_purchase_root"
    action="crm_claim_category_claim_vendor"
    sequence="80"
  />
</odoo>
